{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    //UglifyJS doesn't support es6 yet https://github.com/mishoo/UglifyJS2/issues/448
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom" ],
    "types": [ "node" ]
  },
  "exclude": [ "bin", "node_modules" ],
  "atom": { "rewriteTsconfig": false }
}
